.side-bar
  .side-bar__user-name
    .side-bar__user-name__input-box
      .side-bar__user-name__input-box__left
        sample
      .side-bar__user-name__input-box__right
        =link_to new_group_path , class: "side-bar__user-name__input-box__right__edit" do
          =  icon('far', 'edit')
        =link_to edit_user_path(current_user), class: "side-bar__user-name__input-box__right__fa-cog" do
          =  icon('fas', 'cog')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group-name
        = link_to group_messages_path(group) do
          .side-bar__group-list__group-name__top
            = group.name
          .side-bar__group-list__group-name__bottom
            = group.show_last_message